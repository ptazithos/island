from SCons.Script import Environment, Glob, Alias, Delete

env = Environment(CC='clang')
program = env.Program('main', Glob('*.c'))
env.AlwaysBuild(program)
env.AddPostAction(program, 
"@echo '-----------------';"
"./build/main;" \
"echo '-----------------';")
Alias('build', program)

Alias('clean', None, Delete('build'))

